@using LearningSystem.Models.ViewModels.Admin
@model AdminPageVm
@{
	ViewBag.Title = "Admin Panel";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Panel</h2>

@Html.ActionLink("Add Course", "AddCourse", null, htmlAttributes: new { @class = "btn btn-lg btn-primary" })

<div class="row">
	<div class="col-sm-5 bordered">
		<h3>Courses</h3>
		@foreach (var course in Model.Courses)
		{
			<div class="admin-course">
				<h4>@Html.DisplayFor(vm => course.Name)</h4>
				@Html.ActionLink("Edit", "EditCourse", routeValues: new { id = course.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
			</div>
		}
	</div>
	<div class="col-sm-5 col-sm-offset-1 bordered">
		<h3>Users</h3>
		@foreach (var user in Model.Users)
		{
			<div class="admin-user">
				<h4>@Html.DisplayFor(vm => user.Name)</h4>
				@Html.ActionLink("Edit", "EditUser", routeValues: new { id = user.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
			</div>
		}
	</div>
</div>
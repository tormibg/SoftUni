@using CarDealer.Models.ViewModels.Supplier
@model SupplierAddVm

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm("", "", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.TextBoxFor(vm => vm.Name, null, new { @id = "name", @class = "form-control", @type = "text", @placeholder = "Enter name ...." })
        @*<label for="name">Name: </label>
            <input id="name" class="form-control" type="text" name="name" />*@
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(vm => vm.isImporter, new { @id = "isImporter", @class = "form-control", @type = "checkbox" })
        @*<label for="isImporter">Is importer: </label>
            <input id="isImporter" class="form-control" type="checkbox" name="isImporter" />*@
    </div>
    <div class="form-group">
        <input type="submit" class="form-control" value="Add" />
    </div>

}
<div>
    @Html.ActionLink("Back ....", "All")
</div>
@model CameraBazaar.Models.ViewModels.Cameras.DetailsCameraVm

    @{
        ViewBag.Title = "Details";
    }

    <h2>Details Camera</h2>

    <div>
        <h3>
            @Html.DisplayFor(vm => vm.Make) @Html.DisplayFor(vm => vm.Model) - $@Html.DisplayFor(vm => vm.Price)
            - @if (Model.Quantity == 0)
            {
                <span class="text-danger">Out of stock</span>
            }
            else
            {
                <span class="text-success">In stock</span>
            }
        </h3>
        <img src="@Model.ImageUrl" alt="hello" width="200" height="200" />
        <br />
        @if (Model.Username != null)
        {
            <h3>@Html.ActionLink(Model.Username, "Profile", "Users")</h3>
        }

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.IsFullFrame)
            </dt>

            <dd>
                @if (Model.IsFullFrame)
            {
                    @:Yes
            }
            else
            {
                    @:No
            }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MinShutterSpeed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MinShutterSpeed)"
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaxShutterSpeed)
            </dt>

            <dd>
                1/@Html.DisplayFor(model => model.MaxShutterSpeed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MinIso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MinIso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaxIso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaxIso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.VideoResolution)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VideoResolution)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LightMetering)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LightMetering)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
